@model BeFit.Models.TypCwiczenia

<h2>Usuń typ ćwiczenia</h2>

<p>Czy na pewno chcesz usunąć typ ćwiczenia: <strong>@Model.Nazwa</strong>?</p>

<form asp-action="Usun" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" href="/TypCwiczenia">Anuluj</a>
</form>