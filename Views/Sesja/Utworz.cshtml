@model BeFit.Models.Sesja

@{
    ViewData["Title"] = "Dodaj nową sesję";
}

<h2>Dodaj nową sesję treningową</h2>

<form asp-action="Utworz">
    <div class="form-group">
        <label asp-for="Start"></label>
        <input asp-for="Start" type="datetime-local" class="form-control" />
        <span asp-validation-for="Start" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Koniec"></label>
        <input asp-for="Koniec" type="datetime-local" class="form-control" />
        <span asp-validation-for="Koniec" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    // Ustaw domyślne wartości na teraz i za godzinę
    document.addEventListener('DOMContentLoaded', function() {
        const startInput = document.querySelector('input[name="Start"]');
        const koniecInput = document.querySelector('input[name="Koniec"]');

        if (startInput && !startInput.value) {
            const now = new Date();
            startInput.value = formatDateTime(now);
        }

        if (koniecInput && !koniecInput.value) {
            const later = new Date();
            later.setHours(later.getHours() + 1);
            koniecInput.value = formatDateTime(later);
        }
    });

    function formatDateTime(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        const hours = String(date.getHours()).padStart(2, '0');
        const minutes = String(date.getMinutes()).padStart(2, '0');
        return `${year}-${month}-${day}T${hours}:${minutes}`;
    }
</script>