@model BeFit.Models.Cwiczenie

<h2>Usuń ćwiczenie</h2>

<h3>Czy na pewno chcesz usunąć to ćwiczenie?</h3>

<dl class="row">
    <dt class="col-sm-3">Sesja</dt>
    <dd class="col-sm-9">@Model.Sesja?.Start.ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3">Typ ćwiczenia</dt>
    <dd class="col-sm-9">@Model.TypCwiczenia?.Nazwa</dd>

    <dt class="col-sm-3">Serie</dt>
    <dd class="col-sm-9">@Model.Serie</dd>

    <dt class="col-sm-3">Powtórzenia</dt>
    <dd class="col-sm-9">@Model.Powtorzenia</dd>

    <dt class="col-sm-3">Ciężar</dt>
    <dd class="col-sm-9">@Model.Ciezar kg</dd>
</dl>

<form asp-action="Usun" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
</form>